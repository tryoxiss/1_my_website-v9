---
export interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{date.getDay()} 
	{
	// I can't declare a variable which leaves me with this terribleness
	["January", "Febuary", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"][date.getMonth()]
	} 
	{date.getFullYear()}
</time>